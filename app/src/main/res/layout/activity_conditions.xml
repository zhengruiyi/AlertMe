<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#252525"
    tools:context="teamawesome.alertme.Conditions">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conditions_submit"
        android:onClick="toTimeFrame"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="226dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/temperature"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:paddingBottom="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d0d0d0"
            android:id="@+id/tempValue"
            android:layout_gravity="center_horizontal"
            android:layout_toLeftOf="@+id/textView7"/>

        <SeekBar
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:paddingBottom="35sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/precipitation"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:paddingBottom="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d0d0d0"
            android:id="@+id/precipValue"
            android:layout_gravity="center_horizontal" />

        <SeekBar
            android:layout_width="251sp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar2"
            android:max="100"
            android:paddingBottom="35sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wind_speed"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:paddingBottom="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#d0d0d0"
            android:id="@+id/windValue"
            android:layout_gravity="center_horizontal" />

        <SeekBar
            android:layout_width="251sp"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar3"
            android:max="50"
            android:paddingBottom="25sp"/>
    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deg_f"
        android:id="@+id/checkBox"
        android:layout_gravity="end"
        android:layout_marginTop="37sp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/linearLayout"
        android:layout_toEndOf="@+id/linearLayout"
        android:textColor="#d0d0d0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deg_c"
        android:id="@+id/checkBox2"
        android:layout_gravity="end"
        android:textColor="#d0d0d0"
        android:layout_alignTop="@+id/checkBox"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/percent_chance"
        android:id="@+id/textView"
        android:textSize="15sp"
        android:textColor="#d0d0d0"
        android:layout_above="@+id/checkBox3"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginBottom="85dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mph"
        android:id="@+id/checkBox3"
        android:textColor="#d0d0d0"
        android:textSize="12sp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/linearLayout"
        android:layout_alignLeft="@+id/checkBox4"
        android:layout_alignStart="@+id/checkBox4" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kph"
        android:id="@+id/checkBox4"
        android:layout_gravity="end"
        android:textColor="#d0d0d0"
        android:textSize="14sp"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox"
        android:layout_marginTop="42dp" />

</RelativeLayout>
