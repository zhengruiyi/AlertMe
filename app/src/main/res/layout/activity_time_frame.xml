<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#252525"
    tools:context="teamawesome.alertme.TimeFrame">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame_check"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame_submit"
        android:onClick="toAlarmList"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame_week"
        android:textColor="#d0d0d0"
        android:id="@+id/weekday"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame_weekend"
        android:textColor="#d0d0d0"
        android:id="@+id/weekend"
        android:layout_alignBottom="@+id/weekday"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView3"
        android:layout_marginTop="78dp"
        android:layout_below="@+id/weekday"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:src="@drawable/info_icon"
        android:background="@null"
        android:onClick="showInfo"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/full_day"
        android:textSize="15sp"
        android:textColor="#d0d0d0"
        android:id="@+id/checkBox7"
        android:layout_alignTop="@+id/checkBox8"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/half_day"
        android:textSize="15sp"
        android:textColor="#d0d0d0"
        android:id="@+id/checkBox8"
        android:layout_below="@+id/button3"
        android:layout_toRightOf="@+id/checkBox7"
        android:layout_toEndOf="@+id/checkBox7"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_time"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView4"
        android:layout_below="@+id/checkBox7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar4"
        android:max='12'
        android:paddingTop="15sp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/am"
        android:textColor="#d0d0d0"
        android:id="@+id/checkBox9"
        android:layout_below="@+id/textView4"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pm"
        android:textColor="#d0d0d0"
        android:id="@+id/checkBox10"
        android:layout_below="@+id/checkBox9"
        android:layout_toRightOf="@+id/seekBar4"
        android:layout_toEndOf="@+id/seekBar4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sound"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView5"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/checkBox10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_frame_toggle"
        android:textColor="#d0d0d0"
        android:id="@+id/switch1"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/seekBar4"
        android:layout_toEndOf="@+id/seekBar4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vibrate"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:id="@+id/textView6"
        android:layout_below="@+id/switch1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox11"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignLeft="@+id/switch1"
        android:layout_alignStart="@+id/switch1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarTextView"
        android:textColor="#d0d0d0"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#d0d0d0"
        android:id="@+id/textView8"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:textColor="#d0d0d0"
        android:id="@+id/textView9"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
